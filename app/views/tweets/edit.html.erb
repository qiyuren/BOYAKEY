<div class="main">
  <div class="container">
    <div class="form-title">
      <h1>編集する</h1>
    </div>
    <div class="form">
      <div class="form-body clearfix">
      <% @post.errors.full_messages.each do |message| %>
        <div class="error-message">
          <%= message %>
        </div>
      <% end %>
      <%= form_tag("/tweets/#{@post.id}/update") do %>
        <textarea name="content"><%= @post.content %></textarea>
        <input id="tweet_submit_button" type="submit" value="変更">
      <% end %>
    </div>
  </div>
  </div>
</div>
