<div class="main">
  <div class="index-container">

    <%= form_tag("/tweets/index/search") do %>
      <div class="index-search">
        <input type="text" name="search">
        <input type="submit" value="検索">
      </div>
    <% end %>

    <% if @searched_posts %>
      <% @searched_posts.each do |searched_post| %>
        <div class="index-item">
          <div class="index-left">
            <img src=" <%= "/user_images/#{searched_post.user.image_name}" %> ">
          </div>
          <div class="index-right">
            <div class="index-name">
              <%= link_to(searched_post.user.name,"/users/#{searched_post.user.id}") %>
            </div>
            <%= link_to(searched_post.content,"/tweets/#{searched_post.id}") %>
            <% if searched_post.image_name %>
              <img src=" <%= "/tweet_images/#{searched_post.image_name}" %> ">
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <% @posts.each do |post| %>
        <div class="index-item">
          <div class="index-left">
            <img src=" <%= "/user_images/#{post.user.image_name}" %> ">
          </div>
          <div class="index-right">
            <div class="index-name">
              <%= link_to(post.user.name,"/users/#{post.user.id}") %>
            </div>
            <%= link_to(post.content,"/tweets/#{post.id}") %>
            <% if post.image_name %>
              <img src=" <%= "/tweet_images/#{post.image_name}" %> ">
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>

  </div>
</div>
