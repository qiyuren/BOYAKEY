<div class="main">
  <div class="container">
    <div class="form-title">
      <h1>ログイン</h1>
    </div>
    <div class="form">
      <div class="form-body clearfix">
      <% if @login_error %>
        <div class="error-message">
          <%= @login_error %>
        </div>
      <% end %>

      <%= form_tag("/login") do %>
        <p>メールアドレス</p>
        <input type="email" name="email" value="<%= @email %>">
        <p>パスワード</p>
        <input type="password" name="password" value="<%= @password %>">
        <input type="submit" value="ログイン">
      <% end %>
      </div>
    </div>
  </div>
</div>
